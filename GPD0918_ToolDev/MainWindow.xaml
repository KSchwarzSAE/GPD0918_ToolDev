<Window x:Class="GPD0918_ToolDev.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GPD0918_ToolDev"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Launcher" 
        Height="450" Width="800"
        MinHeight="150" MinWidth="300"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <local:Game x:Key="secondGame" Name="Game2" InstallLocation="" TimePlayed="9999" PatchNotes="🏴‍☠️ Lorem Ipsum 😈" />
    </Window.Resources>
    <TabControl TabStripPlacement="Left">
        <TabItem Header="Game1">
            <local:GameView x:Name="gameView1"/>
        </TabItem>
        <TabItem Header="Game2">
            <local:GameView x:Name="gameView2" Game="{DynamicResource secondGame}"/>
        </TabItem>
    </TabControl>
</Window>