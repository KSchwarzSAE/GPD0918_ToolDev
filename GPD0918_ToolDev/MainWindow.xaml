<Window x:Name="window" x:Class="GPD0918_ToolDev.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GPD0918_ToolDev"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Launcher" 
        Height="450" Width="800"
        MinHeight="150" MinWidth="300"
        WindowStartupLocation="CenterScreen">
    <TabControl>
        <TabItem Header="Games">
            <TabControl Name="tbcGames" ItemsSource="{Binding Path=GameList, ElementName=window}" TabStripPlacement="Left">
                <TabControl.ItemTemplate>
                    <DataTemplate>
                        <Label Content="{Binding Name}" />
                    </DataTemplate>
                </TabControl.ItemTemplate>
                <TabControl.ContentTemplate>
                    <DataTemplate>
                        <local:GameView Game="{Binding}" />
                    </DataTemplate>
                </TabControl.ContentTemplate>
            </TabControl>
        </TabItem>
        <TabItem Header="Admin">
            <local:AdminView />
        </TabItem>
    </TabControl>
</Window>