<Window x:Class="GPD0918_ToolDev.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GPD0918_ToolDev"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <!-- Ein StackPanel sortiert Elemente von oben nach unten 
        / links nach rechts (oder umgekehrt). -->
    <!-- Ein WrapPanel sortiert nebeneinander und dann von oben nach unten.-->
    <!-- Ein DockPanel dockt Elemente an den Seiten an. -->
    <!-- Ein Canvas erlaubt beliebiges platzieren. -->
    <DockPanel LastChildFill="False">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_New"/>
                <MenuItem Header="_Open"/>
                <MenuItem Header="_Recent">
                    <MenuItem Header="File 1"/>
                    <MenuItem Header="File 2"/>
                    <MenuItem Header="File 3"/>
                </MenuItem>
                <!-- Mnemonics -->
                <MenuItem Header="_Quit" Click="QuitMenuItem_Click"/>
            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            Status
        </StatusBar>
    </DockPanel>
</Window>